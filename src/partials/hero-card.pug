        //-         h3(data-tech=tech, aria-hidden="true")=tech
        //- .used-at
        //-     include ./shopify.pug
        //-     include ./slalom_build.pug
        
    .button-group(role="tablist")
        each tech in technologies
            button(
                role="tab" 
                aria-selected="false" 
                aria-controls="content-1"
                id=tech
            )
                +includeTech(tech)